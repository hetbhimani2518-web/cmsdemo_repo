<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_w_blue"
    android:fitsSystemWindows="true"
    tools:context=".home_student">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream_w_blue"
        android:orientation="vertical">

        <!-- Top Navigation Bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/cream_w_blue"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageView
                android:id="@+id/menu_icon_st"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:contentDescription="@string/menu_icon"
                android:padding="8dp"
                android:src="@drawable/menu_drawer_ic" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cream_w_blue">

                <!-- Header Section -->
                <LinearLayout
                    android:id="@+id/header_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/main_bg_darkblue"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_student_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/student_full_name"
                        android:textColor="@color/cream_w_blue"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_program"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/student_s_program"
                        android:textColor="@color/cream_w_blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_semester_division"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/student_s_semester_division"
                        android:textColor="@color/cream_w_blue"
                        android:textSize="16sp" />

                </LinearLayout>

